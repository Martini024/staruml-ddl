{
  "id": "exddl",
  "name": "exDDL",
  "schema": {
    "exddl.gen": {
      "text": "EXDDL Generation",
      "type": "section"
    },
    "exddl.gen.fileExtension": {
      "text": "EXDDL File Extension",
      "description": "EXDDL File Extension",
      "type": "dropdown",
      "options": [
        { "value": ".sql", "text": ".sql" },
        { "value": ".exddl", "text": ".exddl" }
      ],
      "default": ".sql"
    },
    "exddl.gen.quoteIdentifiers": {
      "text": "Quote Identifiers",
      "description": "Quote identifiers",
      "type": "check",
      "default": true
    },
    "exddl.gen.dropTable": {
      "text": "Drop Tables",
      "description": "Drop tables before create",
      "type": "check",
      "default": true
    },
    "exddl.gen.comment": {
      "text": "Comment",
      "description": "Comment for documentation from table and column description",
      "type": "check",
      "default": true
    },
    "exddl.gen.dbms": {
      "text": "DBMS",
      "description": "Select a DBMS where generated DDL to be executed",
      "type": "dropdown",
      "options": [
        { "value": "mysql",  "text": "MySQL" },
        { "value": "oracle", "text": "Oracle" }
      ],
      "default": "mysql"
    },
    "exddl.gen.useTab": {
      "text": "Use Tab",
      "description": "Use Tab for indentation instead of spaces.",
      "type": "check",
      "default": false
    },
    "exddl.gen.indentSpaces": {
      "text": "Indent Spaces",
      "description": "Number of spaces for indentation.",
      "type": "number",
      "default": 4
    }
  }
}
